---
import "../styles/global.css";
---

<section class="categori">
  <a href="artists/">
    <div>
      <img src="kategorilineup.svg" alt="kategorilineup" />
      <h2>SE VORES LINEUP</h2>
    </div>
  </a>

  <div>
    <img src="kategoriprogram.svg" alt="kategoriprogram" />
    <h2>SE VORES PROGRAM</h2>
    <p>Klik ind og få et overblik over programmet for hver af dagene!</p>
  </div>
</section>

<style>
  p{
    font-size: var(--Primær-Brødtekst-Size);
    max-width: 43ch;
  }
  
  .categori {
    display: grid;
  }

  a {
    text-decoration: none;
    color: var(--Black);
  }

  a:hover h2 {
    text-decoration: underline;
  }

  h2 {
    padding-bottom: 1rem;
    padding-top: 1rem;
  }

  @media (width > 800px) {
    /* Ved desktop størrelse */
    .categori {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      padding: 10rem;
    }
  }

  @media (width < 799px) {
    /* Ved mobile størrelse */

    .categori {
      grid-template-columns: 1fr;
      padding: 4rem;
    }
    p{
      padding-bottom: 4rem;
    }
  }
</style>
